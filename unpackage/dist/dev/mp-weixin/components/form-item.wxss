  padding: 0 32rpx;
  box-sizing: border-box;
}
.form-item .label {
  width: 112rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #7D7D7D;
  margin-right: 40rpx;
}
.form-item .input {
  flex: 1;
}
.form-item .input .uni-input {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
