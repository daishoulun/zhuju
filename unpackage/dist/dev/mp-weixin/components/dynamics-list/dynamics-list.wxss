.dynamics-list {
  display: flex;
  justify-content: space-between;
}
.dynamics-list .dynamics-item {
  position: relative;
  width: 338rpx;
  height: 408rpx;
  background: #D8D8D8;
  border-radius: 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.dynamics-list .dynamics-item:nth-of-type(2n) {
  margin-right: 0;
}
.dynamics-list .dynamics-item .like {
  position: absolute;
  bottom: 20rpx;
  left: 14rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
}
.dynamics-list .dynamics-item .like image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}
.dynamics-list .dynamics-item .like.progress {
  color: #201F2C;
  background-color: linear-gradient(109deg, #FDB0F2 0%, #109DFF 100%);
}

