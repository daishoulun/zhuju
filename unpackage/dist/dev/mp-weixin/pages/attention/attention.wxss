.attention {
  height: 100vh;
  background: #181818;
}
.attention .tabbar {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7D7D7D;
  padding: 0 16rpx;
}
.attention .tabbar .tabbar-item {
  padding: 16rpx 0;
  border-bottom: 4rpx solid transparent;
  transition: all .5s;
}
.attention .tabbar .tabbar-item:first-of-type {
  margin-right: 20rpx;
}
.attention .tabbar .tabbar-item.active {
  color: #fff;
  border-bottom: 4rpx solid #c8c7cc;
}
.attention .list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}
.attention .list .list-item .avatar {
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  overflow: hidden;
}
.attention .list .list-item .avatar image {
  width: 100%;
  height: 100%;
}
.attention .list .list-item .content {
  flex: 1;
  margin: 0 10px;
  border-radius: 12px;
}
.attention .list .list-item .content .name {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #fff;
}
.attention .list .list-item .content .info {
  color: #7D7D7D;
  font-size: 24rpx;
}
.attention .list .list-item .btn {
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 56rpx;
  font-size: 12px;
  padding: 0;
  background: linear-gradient(109deg, #FDB0F2 0%, #109DFF 100%);
  color: #201F2C;
}
.attention .list .list-item .btn.already-attion-btn {
  font-weight: 500;
  color: #7D7D7D;
  background: #343434;
}

