.self-introduction {
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
  background: #181818;
  padding: 56rpx 32rpx;
}
.self-introduction .textarea-wrap {
  position: relative;
  width: 100%;
  height: 486rpx;
  padding: 36rpx 36rpx 64rpx;
  box-sizing: border-box;
  background: #2B2B2B;
  border-radius: 28rpx;
}
.self-introduction .textarea-wrap .textarea {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}
.self-introduction .textarea-wrap .count {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #7D7D7D;
}
.self-introduction .btn {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: linear-gradient(109deg, #FDB0F2 0%, #109DFF 100%);
  border-radius: 60rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #201F2C;
  text-align: center;
  margin-top: 40rpx;
}

