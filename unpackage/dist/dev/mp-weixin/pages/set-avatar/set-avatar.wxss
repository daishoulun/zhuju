.set-avatar {
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
  background: #181818;
  padding: 88rpx 70rpx 0;
}
.set-avatar .avatar {
  position: relative;
  width: 192rpx;
  height: 192rpx;
  margin: 0 auto 40rpx;
}
.set-avatar .avatar .header {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.set-avatar .avatar .camera {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 72rpx;
  height: 72rpx;
}
.set-avatar .set-name {
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #DCAEF4;
  text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.14);
  margin-bottom: 40rpx;
}
.set-avatar .nick-input input {
  width: 100%;
  height: 132rpx;
  background: #2B2B2B;
  border-radius: 28rpx;
  padding-left: 40rpx;
  color: #fff;
}
.set-avatar .nick-input .tip {
  margin-top: 24rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #5C5C5C;
  text-align: center;
}
.set-avatar .btn {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: #5C5C5C;
  border-radius: 60rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #201F2C;
  text-align: center;
  margin-top: 102rpx;
}

