.update-info {
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
  padding-top: 88rpx;
  background: #181818;
}
.update-info .header-image {
  position: relative;
  width: 192rpx;
  height: 192rpx;
  margin: 0 auto 64rpx;
}
.update-info .header-image .header {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.update-info .header-image .camera {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 72rpx;
  height: 72rpx;
}
.update-info .user-form {
  background: #262626;
  border-radius: 20rpx;
}
.update-info .user-form .uni-input {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.update-info .user-form .home-bg {
  border-top: 20rpx solid #181818;
}

